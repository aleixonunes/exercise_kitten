<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exercise_kitten" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontBN">
        <item name="fontFamily">@font/bebas_neue_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="FontBN.Title">
        <item name="textAllCaps">true</item>
    </style>

    <style name="FontBN.Title.Small">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontBN.Title.Big">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="FontBN.Title.ExtraBig">
        <item name="android:textSize">39sp</item>
    </style>

    <style name="FontLM">
        <item name="fontFamily">@font/lato_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>