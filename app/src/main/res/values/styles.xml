<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exercise_kitten" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontBN">
        <item name="fontFamily">@font/bebasneue_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="FontBN.Title">
        <item name="textAllCaps">true</item>
    </style>

    <style name="FontBN.Title.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontBN.Title.Big">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="FontBN.Title.ExtraBig">
        <item name="android:textSize">39sp</item>
    </style>

    <style name="FontLM">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>